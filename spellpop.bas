5 REM *** SPELLPOP - TYPE THE WORD TO POP THE BUBBLE ***

10 RANDOMIZE TIMER
15 DIM W$(10)
20 FOR I=1 TO 10
30 READ W$(I)
40 NEXT I
45 GOSUB 1000
50 PRINT "SPELLPOP! TYPE THE WORD IN THE BUBBLE TO POP IT!"
60 PRINT "PRESS ENTER TO BEGIN...":INPUT "";Z$
70 SCORE=0

80 REM *** MAIN LOOP ***
90 REM CLS
100 W=INT(RND*10)+1
110 WORD$=W$(W)
120 GOSUB 500
130 PRINT:INPUT "TYPE THE WORD: ";A$
140 IF A$=WORD$ THEN PRINT "POP!!":SCORE=SCORE+1:GOTO 200
150 PRINT "OOPS! TRY AGAIN...":GOTO 130

200 PRINT:PRINT "SCORE:";SCORE
210 PRINT "ANOTHER BUBBLE? (Y/N)";:INPUT "";A$
220 IF LEFT$(A$,1)="Y" OR LEFT$(A$,1)="y" THEN GOTO 90

230 PRINT:PRINT "THANKS FOR PLAYING SPELLPOP!"
240 PRINT "FINAL SCORE:";SCORE
250 END

